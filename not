"""

texto = "Olá, mundo!"

texto_upper = texto.upper() #upper converte tudo para maiúsculo
print(texto_upper)

texto_lower = texto.lower() #lower converte tudo para minúsculo
print(texto_lower)

texto_capitalize = texto.capitalize() #Apenas a primeira letra em maiusculo
print(texto_capitalize)

ocorrencias = texto.count("o") #contabiliza a quantidade de letra mencionada no parenteses
print(ocorrencias)

texto_substituido = texto.replace("mundo", "amigo") # substitui as palavras citadas
print(texto_substituido)

