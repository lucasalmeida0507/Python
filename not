print(random.choice(frutas)) #escolhe uma fruta aleatoriamente

#Embaralhar uma lista aleatóriamente
numeros = [1, 2, 3, 4, ]
random.shuffle(numeros)
print(numeros) #lista de numeros embaralhados

print(random.uniform(5.5, 9.5))

